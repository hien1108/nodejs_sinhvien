<div class="score-management">
    <div class="score-header">
        <h2>Quản lý Điểm</h2>
        <div class="header-actions">
            <div class="search-box">
                <input type="text" id="searchScore" placeholder="Tìm kiếm theo mã SV, tên môn...">
                <i class='bx bx-search'></i>
            </div>
            <button class="btn-add" onclick="openScoreModal()">
                <i class='bx bx-plus'></i> Thêm Điểm
            </button>
        </div>
    </div>

    <table class="data-table" id="scoreTable">
        <thead>
            <tr>
                <th>Mã SV</th>
                <th>Tên SV</th>
                <th>Mã MH</th>
                <th>Tên MH</th>
                <th>Điểm GK</th>
                <th>Điểm Thi</th>
                <th>Điểm TK</th>
                <th>Xếp loại</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<div id="scoreModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="scoreModalTitle">Thêm Điểm</h3>
            <span class="close" onclick="closeScoreModal()"><i class='bx bx-x'></i></span>
        </div>
        <form id="scoreForm">
            <div class="modal-body">
                <div class="form-group">
                    <label for="maSVScore">Mã Sinh viên</label>
                    <select id="maSVScore" required>
                        <option value="">-- Chọn Sinh viên --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="maMHScore">Mã Môn học</label>
                    <select id="maMHScore" required>
                        <option value="">-- Chọn Môn học --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="diemGK">Điểm Giữa kì</label>
                    <input type="number" id="diemQT" min="0" max="10" step="0.1" required>
                </div>
                <div class="form-group">
                    <label for="diemThi">Điểm Thi</label>
                    <input type="number" id="diemThi" min="0" max="10" step="0.1" required>
                </div>
                <input type="hidden" id="editingScoreRowIndex">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-cancel" onclick="closeScoreModal()">Hủy</button>
                <button type="submit" class="btn-save">Lưu</button>
            </div>
        </form>
    </div>
</div>
<script src="script.js"></script>