<h1 class="page-title">
    <i class='bx bxs-home'></i> Dashboard
</h1>

<section class="dashboard">
    <div class="card blue">
        <div class="card-body">
            <div class="card-count">{{facultyCount}}</div>
            <div class="card-title">Khoa</div>
            <div class="card-icon"><i class="bx bxs-bank"></i></div>
        </div>
    </div>
    <div class="card green">
        <div class="card-body">
            <div class="card-count">{{classCount}}</div>
            <div class="card-title">Lớp</div>
            <div class="card-icon"><i class="bx bx-table"></i></div>
        </div>
    </div>
    <div class="card orange">
        <div class="card-body">
            <div class="card-count">{{studentCount}}</div>
            <div class="card-title">Sinh viên</div>
            <div class="card-icon"><i class="bx bxs-user"></i></div>
        </div>
    </div>
    <div class="card red">
        <div class="card-body">
            <div class="card-count">{{subjectCount}}</div>
            <div class="card-title">Môn học</div>
            <div class="card-icon"><i class="bx bxs-folder-open"></i></div>
        </div>
    </div>
</section>

